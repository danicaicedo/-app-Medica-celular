<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F9FB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar simple -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textColor="#20CAC4"
            android:textSize="17sp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Ajustes" />
    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Avatar redondo y nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="14dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="102dp"
                    android:layout_height="102dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:background="@android:color/darker_gray"
                    android:scaleType="centerCrop"
                    android:contentDescription="Avatar usuario" />

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de Usuario"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="correo@ejemplo.com"
                    android:textColor="#888"
                    android:textSize="14sp"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <!-- Sección datos extra -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"/>

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Editar Perfil"
                android:textColor="#20CAC4"
                android:background="@android:drawable/edit_text"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawableTint="#20CAC4"
                android:textSize="15sp"
                android:paddingHorizontal="18dp"
                android:paddingVertical="5dp"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:drawablePadding="10dp" />

            <TextView
                android:id="@+id/txtUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado del usuario"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />
            <Button
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión con Google"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"/>


            <!-- Preferencias / Ajustes rápidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferencias / ajustes"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingTop="18dp"
                android:paddingBottom="7dp"
                android:textColor="#222" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Ejemplo: idioma -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_manage"
                        app:tint="#20CAC4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idioma"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:paddingTop="4dp" />
                </LinearLayout>
                <!-- Ejemplo: notificaciones -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:layout_margin="6dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_popup_sync"
                        app:tint="#20CAC4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notificaciones"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:paddingTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Historial -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historial de actividad"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingTop="18dp"
                android:paddingBottom="7dp"
                android:textColor="#222" />

            <!-- Tarjetas historial -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:elevation="2dp"
                    android:layout_margin="6dp">



                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        app:tint="#20CAC4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hemorragia"
                        android:textSize="13sp"
                        android:textColor="#444"
                        android:paddingTop="3dp" />
                </LinearLayout>
                <!-- Duplica para más favoritos o actividad -->
            </LinearLayout>

            <!-- Botón cerrar sesión -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Cerrar sesión"
                android:textColor="#20CAC4"
                android:background="@android:drawable/ic_lock_power_off"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="26dp"
                android:elevation="1dp" />


        </LinearLayout>
    </ScrollView>

    <!-- Barra de navegación inferior simple igual a la del diseño antiguo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/homeButtonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Home"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="#6DA9E5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#6DA9E5"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchButtonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#6DA9E5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="#6DA9E5"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emergencyButtonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"/>

        <LinearLayout
            android:id="@+id/MapaButtonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="4dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:contentDescription="Mapa"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="#517CF4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:textColor="#517CF4"
                android:textSize="13sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileButtonLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_manage"
                app:tint="#6DA9E5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="#6DA9E5"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
